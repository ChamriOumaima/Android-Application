<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/colorTransparentWhite">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="386dp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="40dp">

        <ImageView
            android:id="@+id/imgView_logo"
            android:layout_width="133dp"
            android:layout_height="130dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/firstb" />

        <RelativeLayout
            android:id="@+id/rellay1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgView_logo"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-medium"
                android:text="InsÃ©rer le nom de la pharmacie"
                android:textColor="@color/colorAccent"
                android:textSize="21sp" />

            <LinearLayout
                android:id="@+id/linlay1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_login"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:text="Pharmacie"
                        android:textAllCaps="true"
                        android:textColor="@color/colorAccent"
                        android:textSize="15sp" />

                    <!--EditText
                        android:id="@+id/text"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/gradel"
                        android:drawableLeft="@drawable/pharm"
                        android:fontFamily="sans-serif-light"
                        android:hint="Entrez le nom de la pharmacie"
                        android:paddingLeft="10dp"
                        android:paddingRight="15dp"
                        android:singleLine="true"
                        android:textColor="@color/colorAccent"
                        android:textSize="15sp" /-->

                    <AutoCompleteTextView
                        android:id="@+id/text"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/gradel"
                        android:drawableLeft="@drawable/pharm"
                        android:fontFamily="sans-serif-light"
                        android:hint="Entrez le nom de la pharmacie"
                        android:paddingLeft="10dp"
                        android:paddingRight="15dp"
                        android:textColor="@color/colorTransparentWhite"
                        android:singleLine="true"
                        android:textSize="15sp"
                        android:completionThreshold="1"
                        />


                </LinearLayout>

            </LinearLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/AAA"
                android:layout_width="189dp"
                android:layout_height="34dp"
                android:layout_below="@+id/linlay1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:background="@drawable/grad_bg"
                android:clickable="true"

                android:elevation="2dp"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:textColor="@color/colorPrimary"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardCornerRadius="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Recherche" />
            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </RelativeLayout>

